{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vnetName": {
      "type": "string",
      "defaultValue": "VNet1",
      "metadata": {
        "description": "VNet name"
      }
    },
    "vnetAddressPrefix": {
      "type": "string",
      "defaultValue": "192.168.10.0/24",
      "metadata": {
        "description": "Address prefix"
      }
    },
    "subnet1Prefix": {
      "type": "string",
      "defaultValue": "192.168.10.0/26",
      "metadata": {
        "description": "Subnet 1 Prefix"
      }
    },
    "subnet1Name": {
      "type": "string",
      "defaultValue": "Subnet1",
      "metadata": {
        "description": "Subnet 1 Name"
      }
    },
    "subnet2Prefix": {
      "type": "string",
      "defaultValue": "192.168.10.64/26",
      "metadata": {
        "description": "Subnet 2 Prefix"
      }
    },
    "subnet2Name": {
      "type": "string",
      "defaultValue": "Subnet2",
      "metadata": {
        "description": "Subnet 2 Name"
      }
    },
    "subnet3Prefix": {
      "type": "string",
      "defaultValue": "192.168.10.128/26",
      "metadata": {
        "description": "Subnet 3 Prefix"
      }
    },
    "subnet3Name": {
      "type": "string",
      "defaultValue": "Subnet3",
      "metadata": {
        "description": "Subnet 3 Name"
      }
    },
    "nsgName1": {
        "type": "string",
        "defaultValue": "blueprint-nsg",
        "metadata": {
            "description": "This is the name of the network security group"
            }
        },
    "nsgName2": {
        "type": "string",
        "defaultValue": "blueprint-nsg",
        "metadata": {
            "description": "This is the name of the network security group"
            }
        },
    "nsgName3": {
        "type": "string",
        "defaultValue": "blueprint-nsg",
        "metadata": {
            "description": "This is the name of the network security group"
            }
        }  
  },
  "variables": {},
  "resources": [
      {
            "apiVersion": "2019-02-01",
            "type": "Microsoft.Network/networkSecurityGroups",
            "name": "[parameters('nsgName1')]",
            "location": "[resourceGroup().location]",
            "properties": {},
            "tags": {}
      },
      {
            "apiVersion": "2019-02-01",
            "type": "Microsoft.Network/networkSecurityGroups",
            "name": "[parameters('nsgName2')]",
            "location": "[resourceGroup().location]",
            "properties": {},
            "tags": {}
      },
      {
            "apiVersion": "2019-02-01",
            "type": "Microsoft.Network/networkSecurityGroups",
            "name": "[parameters('nsgName3')]",
            "location": "[resourceGroup().location]",
            "properties": {},
            "tags": {}
      },            
    {
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2020-05-01",
      "name": "[parameters('vnetName')]",
      "location": "[resourceGroup().location]",
      "dependsOn":[
          "[resourceId('Microsoft.Network/networkSecurityGroups/', parameters('nsgName1'))]",
          "[resourceId('Microsoft.Network/networkSecurityGroups/', parameters('nsgName2'))]",
          "[resourceId('Microsoft.Network/networkSecurityGroups/', parameters('nsgName3'))]"
      ],
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('vnetAddressPrefix')]"
          ]
        }
      },
      "resources": [
        {
          "type": "subnets",
          "apiVersion": "2020-05-01",
          "location": "[resourceGroup().location]",
          "name": "[parameters('subnet1Name')]",
          "dependsOn": [
            "[parameters('vnetName')]"
          ],
          "properties": {
            "addressPrefix": "[parameters('subnet1Prefix')]",
            "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups',parameters('nsgName1'))]"
            }
          }
        },
        {
          "type": "subnets",
          "apiVersion": "2020-05-01",
          "location": "[resourceGroup().location]",
          "name": "[parameters('subnet2Name')]",
          "dependsOn": [
            "[parameters('vnetName')]",
            "[parameters('subnet1Name')]"
          ],
          "properties": {
            "addressPrefix": "[parameters('subnet2Prefix')]",
            "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups',parameters('nsgName2'))]"
            }
          }
        },
        {
          "type": "subnets",
          "apiVersion": "2020-05-01",
          "location": "[resourceGroup().location]",
          "name": "[parameters('subnet3Name')]",
          "dependsOn": [
            "[parameters('vnetName')]",
            "[parameters('subnet1Name')]",
            "[parameters('subnet2Name')]"
          ],
          "properties": {
            "addressPrefix": "[parameters('subnet3Prefix')]",
            "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups',parameters('nsgName3'))]"
            }
          }
        }
      ]
    }
  ]
}